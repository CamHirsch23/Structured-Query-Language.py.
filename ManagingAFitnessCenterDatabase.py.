# Question 1 
# Task 1, Task 2, and Task 3 

# Simulating a database using Python data structures

# Simulated Members table
members_table = {}

# Simulated WorkoutSessions table
workout_sessions_table = {}

# Task 1: Data Insertion
# Inserting data into Members "table"
members = [
    (1, 'Jane Doe', 28),
    (2, 'John Smith', 35),
    (3, 'Alice Johnson', 30)
]

for member in members:
    member_id, name, age = member
    members_table[member_id] = {'name': name, 'age': age}

# Inserting data into WorkoutSessions "table"
workout_sessions = [
    (1, 1, '2023-10-01', '08:00 AM', 'Yoga'),
    (2, 2, '2023-10-01', '09:00 AM', 'Cardio'),
    (3, 3, '2023-10-01', '10:00 AM', 'Strength Training')
]

for session in workout_sessions:
    session_id, member_id, session_date, session_time, activity = session
    workout_sessions_table[session_id] = {
        'member_id': member_id,
        'session_date': session_date,
        'session_time': session_time,
        'activity': activity
    }

print("Data inserted successfully.")

# Task 2: Data Update
# Updating workout session time for Jane Doe
for session_id, session_info in workout_sessions_table.items():
    if session_info['member_id'] == 1:  # Assuming Jane Doe has member_id 1
        workout_sessions_table[session_id]['session_time'] = '06:00 PM'

print("Workout session time updated successfully.")

# Task 3: Data Deletion
# Deleting John Smith's record
member_id_to_delete = None
for member_id, member_info in members_table.items():
    if member_info['name'] == 'John Smith':
        member_id_to_delete = member_id
        break

if member_id_to_delete:
    del members_table[member_id_to_delete]
    # Also delete any workout sessions for John Smith
    workout_sessions_table = {sid: sess for sid, sess in workout_sessions_table.items() if sess['member_id'] != member_id_to_delete}

print("Member record deleted successfully.")
